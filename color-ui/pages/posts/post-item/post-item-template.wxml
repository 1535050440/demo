<template name="postItem">

<view class='post-container'>
  <view class='post-author-data'>
    <image wx:if="{{img_condition}}" class='post-author' src='{{avatar}}'></image>
    <text class='post-date'>{{date}}</text>
  </view>
  <text class='post-title'>{{title}}</text>
  <image class='post-image' src='{{imgSrc}}'></image>
  <text class='post-content'>
    {{content}}
    </text>
  <view class='post-like'>
    <image class='post-like-image' src='/images/ali10011.png'></image>
    <text class='post-like-word'>{{reading}}</text>
    <image class='post-like-image' src='/images/ali1002.png'></image>
    <text class='post-like-word'>{{collection}}</text>
  </view>
</view>

</template>